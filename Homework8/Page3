        <script>
            function checkboxes()
            {
                var firstName = document.getElementById("fName").value;
                if(firstName == "")
                {
                    document.getElementsById("fName").style.backroundColor = "yellow";
                    document.getElementsById("fName").focus();
                    document.getElementById("fNameMessage").innerHTML = "* needed";
                    document.getElementById("fNameMessage").style.color = "yellow";

                }

            }
